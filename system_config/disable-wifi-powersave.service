[Unit]
Description=Disable WiFi Power Saving
After=network.target sys-subsystem-net-devices-wlan0.device suspend.target hibernate.target hybrid-sleep.target
Wants=sys-subsystem-net-devices-wlan0.device

[Service]
Type=oneshot
ExecStart=/home/albibenni/.local/share/bin/disable-wifi-powersave.sh
RemainAfterExit=no

[Install]
WantedBy=multi-user.target suspend.target hibernate.target hybrid-sleep.target
